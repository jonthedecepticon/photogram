= render 'post', post: @post
- if @post.user.id == current_user.id
  .text-center.edit-links
    = link_to "Cancel", posts_path, :class => 'btn btn-danger'
    |
    = link_to "Edit", edit_post_path(@post), :class => 'btn btn-success'
- else
  .text-center.edit-links
    =link_to "Cancel", posts_path, :class => 'btn btn-danger'