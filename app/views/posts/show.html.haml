.posts-wrapper.row
  .post
    .post-head
      .name
        Ben Walker
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center.edit-links
      = link_to "Edit", edit_post_path(@post), :class => 'btn btn-success'
      |
      = link_to "Back", posts_path, :class => 'btn btn-danger'

